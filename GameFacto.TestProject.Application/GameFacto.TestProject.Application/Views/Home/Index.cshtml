@model List<ProductList>
@{
    ViewData["Title"] = "Home Page";
}

@section Styles{
    <link href="~/css/site.css" rel="stylesheet" />
}
<div class="container">
    <div class="row">
        <aside class="col-md-3">

            <div class="card">

                @await Component.InvokeAsync("CategoryList", new { categoryId = ViewBag.CategoryId, categoryName = ViewBag.CategoryName})

            </div> <!-- card.// -->

        </aside>
        <main class="col-md-9">

            <header class="border-bottom mb-4 pb-3">
                <div class="form-inline">
                    <span class="mr-md-auto">32 Items found </span>
                </div>
            </header><!-- sect-heading -->

            <div class="row">

                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <figure class="card card-product-grid">
                            <div class="img-wrap">
                                <img src="http://bootstrap-ecommerce.com/bootstrap-ecommerce-html/images/items/7.jpg" class="img-fluid">
                            </div> <!-- img-wrap.// -->
                            <figcaption class="info-wrap">
                                <div class="fix-height">
                                    <a href="#" class="title">@item.Name</a>
                                    <div class="price-wrap mt-2">
                                        <span class="price">$@item.Price</span>
                                    </div> <!-- price-wrap.// -->
                                </div>
                                <a href="#" class="btn btn-block btn-primary">Add to cart </a>
                            </figcaption>
                        </figure>
                    </div> <!-- col.// -->
                }


            </div> <!-- row end.// -->
        </main>
    </div>
</div>
