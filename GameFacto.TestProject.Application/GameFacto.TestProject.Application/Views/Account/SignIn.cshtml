@model AppUserLogin

<form method="post" class="w-75 mx-auto p-3 mt-4">
    <div class="form-group">
        <label asp-for="UserName">Username</label>
        <span asp-validation-for="UserName"></span>
        <input asp-for="UserName" class="form-control" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <span asp-validation-for="Password"></span>
        <input asp-for="Password" class="form-control" type="password" />
    </div>
    <div class="form-group" style="margin:auto">
        <label asp-for="RememberMe">Remember Me</label>
        <input asp-for="RememberMe" type="checkbox" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary btn-sm" type="submit">Sign In</button>
        <a class="btn btn-sm" asp-action="SignUp" asp-controller="Account">Sign Up</a>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
</form>